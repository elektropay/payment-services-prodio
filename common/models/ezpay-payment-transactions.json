{
  "name": "ezpayPaymentTransactions",
  "plural": "ezpayPaymentTransactions",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "transactionId": {
      "type": "string",
      "id": true,
      "defaultFn": "uuidv4"
    },
    "payerId": {
      "type": "string"
    },
    "merchantId": {
      "type": "string"
    },
    "totalAmount": {
      "type": "number"
    },
    "paymentFrequency":{
      "type": "string",
      "default":"ONETIME"
    },
    "metaData": {
      "type": "object"
    },
    "transactionStatus": {
      "type": "string"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "createdAt": {
      "type": "date"
    },
    "paymentDate": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "Payer": {
      "type": "belongsTo",
      "model": "ezpayPayees",
      "foreignKey": "payerId"
    },
    "Merchant": {
      "type": "belongsTo",
      "model": "ezpayMerchants",
      "foreignKey": "merchantId"
    },
    "Installments": {
      "type": "hasMany",
      "model": "PaymentInstallments",
      "foreignKey": "refTransactionId"
    }
  },
  "acls": [],
  "methods": {}
}
